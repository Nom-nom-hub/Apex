{
  "name": "apex-monorepo",
  "version": "0.1.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "dev": "echo \"No dev script yet\"",
    "build": "pnpm --filter \"@apex/*\" build",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "docs:dev": "pnpm --filter apex-docs dev",
    "docs:build": "pnpm --filter apex-docs build"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "jsonwebtoken": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "crypto-browserify": "^3.12.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "node-stdlib-browser": "^1.3.1",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  }
}